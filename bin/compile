#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR

mkdir sw
curl http://spork.in/heroku-zmq.tar.gz |tar zxf - -C sw

export LDFLAGS=-L$BUILD_DIR/sw/lib
export CPPFLAGS=-I$BUILD_DIR/sw/include
export GEM_HOME=$BUILD_DIR/gems
export GEM_PATH=
export PATH=$GEM_HOME/bin:$PATH

gem install bundler --pre --no-ri --no-rdoc
bundle install --deployment --standalone
